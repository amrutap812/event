<%= form_with(model: @shedule, local: true) do |f| %>
<p>
	<%= f.label :Event_Name %><br/>

	<%= f.text_field :event_name, required: true  %>
</p>
<p>
	<%= f.label :Speaker_image %><br/>

	<%= f.file_field :avatar, required: true %>
</p>

<p>
	<%= f.label :Speaker_Name %><br/>

	<%= f.text_field :speaker_name, required: true %>
</p>
<p>
	<%= f.label :Venue_details %><br/>
	<%= f.text_field :venue_details, required: true%>
</p>
<p>
	<%= f.label :purpose_of_event %><br/>
	<%= f.text_area :purpose_of_conference, required: true%>
</p>
<p>
	<%= f.label :price %><br/>
	<%= f.text_field :price, required: true%>
</p>

<p>
	<%= f.label :catogry_of_people_who_will_get_benifits%><br/>
	<%= f.select :category, ["All","children","adult"] , required: true%>
</p>

  
  <p>
  	<%= f.label :Date_and_time%><br/>
	<%= f.datetime_field :date_time, required: true %>
  </p>
<p>
	<%= f.submit :Save ,class: 'btn btn-primary'%>
</p>
<% end %>